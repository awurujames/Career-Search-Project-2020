@model Career_Search_Project.Areas.Admin.Models.JobInformation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h5 class="btn btn-success">Job Information</h5>
<hr />

<div class="row">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="FunctionalAreaId" class="control-label"></label>
                    <select asp-for="FunctionalAreaId" class="form-control" asp-items="ViewBag.FunctionalAreaId"></select>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group  ">
                    <label asp-for="JobLocation" class="control-label"></label>
                    <input asp-for="JobLocation" class="form-control" />
                    <span asp-validation-for="JobLocation" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="AgeLimit" class="control-label"></label>
                    <input asp-for="AgeLimit" class="form-control" />
                    <span asp-validation-for="AgeLimit" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row col-12">
            <div class="col-md-3">
                <div class="form-group ">
                    <label asp-for="YearsOfExperience" class="control-label"></label>
                    <input asp-for="YearsOfExperience" class="form-control" />
                    <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Qualification" class="control-label"></label>
                    <input asp-for="Qualification" class="form-control" />
                    <span asp-validation-for="Qualification" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Requirements" class="control-label"></label>
                    <input asp-for="Requirements" class="form-control" />
                    <span asp-validation-for="Requirements" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Responsibility" class="control-label"></label>
                    <input asp-for="Responsibility" class="form-control" />
                    <span asp-validation-for="Responsibility" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row col-12">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="JobSummary" class="control-label"></label>
                    <input asp-for="JobSummary" class="form-control" />
                    <span asp-validation-for="JobSummary" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="IndustryId" class="control-label"></label>
                    <select asp-for="IndustryId" class="form-control" asp-items="ViewBag.IndustryId"></select>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Renumeration" class="control-label"></label>
                    <input asp-for="Renumeration" class="form-control" />
                    <span asp-validation-for="Renumeration" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                </div>
            </div>
        </div>

        <div class="row col-12">
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="JobTypeId" class="control-label"></label>
                    <select asp-for="JobTypeId" class="form-control" asp-items="ViewBag.JobTypeId"></select>
                </div>
            </div>
        </div>
        @*<div class="col-md-3">

            </div>*@


        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}






